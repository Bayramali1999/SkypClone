<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="25dp"
    android:elevation="20dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/find_fired_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_image" />

        <TextView
            android:id="@+id/find_fired_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/find_fired_img"
            android:layout_marginTop="5dp"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="@color/purple_200"
            android:textSize="20sp" />

        <Button
            android:id="@+id/find_fired_accept_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/find_fired_name"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="79dp"
            android:background="@color/purple_200"
            android:text="Accept fiend request"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:visibility="gone" />


        <Button
            android:id="@+id/find_fired_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/find_fired_accept_btn"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="79dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/holo_red_dark"
            android:text="Remove fiend request"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>